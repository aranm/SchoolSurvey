<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - My ASP.NET MVC Application</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Styles.Render("~/Content/themes/base/css")
        @Scripts.Render("~/bundles/modernizr")
       <script type="text/javascript" src="@Url.Content("~/scripts/v1.01/require.js")" data-main="@Url.Content("~/scripts/v1.01/application.js")"></script>
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">Parent association annual survey</p>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderBody()
        </div>
        <footer>
            <div class="content-wrapper">
            </div>
        </footer>
    </body>
</html>
